<Window x:Class="Lab06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab06"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Crear Categoría" Width="250" Height="60" FontSize="16" Click="CrearCategoria_Click"/>
            <Button Content="Actualizar Categoría" Width="250" Height="60" FontSize="16" Click="ActualizarCategoria_Click"/>
            <Button Content="Borrar Categoría" Width="250" Height="60" FontSize="16" Click="BorrarCategoria_Click"/>
            <Button Content="Listar Categoría" Width="250" Height="60" FontSize="16" Click="ListarCategoria_Click"/>
        </StackPanel>
    </Grid>
</Window>
